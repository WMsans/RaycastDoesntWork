.optional #type {
    color: #858585;
}

.port.optional {
    --port-color: #858585;
}
Port.typePointInstance{
    --port-color:rgb(204, 206, 104);
}
Port.typeBiomeData {
    --port-color: #5B3E2E;
}

Port.typeTestValue {
    --port-color:rgb(17, 255, 29);
}

Port.typeMISSING {
    --port-color:rgb(255, 34, 34);
}


Port.typeMISSING #type{
    color:rgb(255, 34, 34);
}